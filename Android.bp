cc_library {
    name: "fmtlib",
    srcs: ["src/format.cc"],
    cflags: [
        "-fno-exceptions",
        "-Wall",
        "-Werror",
        // If built without exceptions, libfmt uses assert.
        "-UNDEBUG",
    ],
    sanitize: {
        misc_undefined: ["integer"],
    },
    local_include_dirs: ["include"],
    export_include_dirs: ["include"],
}
